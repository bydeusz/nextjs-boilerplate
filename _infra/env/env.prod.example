# Production Environment Variables Template
# Copy this file to .env.prod and fill in your production values
# NEVER commit .env.prod to version control!

# MySQL Configuration (for Headless CMS - WordPress)
MYSQL_ROOT_PASSWORD=your_secure_mysql_root_password
MYSQL_DATABASE=your_main_db_name
MYSQL_USER=your_app_user
MYSQL_PASSWORD=your_secure_app_password
MYSQL_PORT=3306


# PostgreSQL Configuration (for Next.js App)
POSTGRES_DB=your_prod_postgres_db
POSTGRES_USER=your_prod_postgres_user
POSTGRES_PASSWORD=your_secure_prod_postgres_password
POSTGRES_PORT=5432

# MinIO Configuration
MINIO_ROOT_USER=your_prod_minio_user
MINIO_ROOT_PASSWORD=your_secure_prod_minio_password
MINIO_ENDPOINT=your_prod_minio_host
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_USE_SSL=true

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Security (generate strong secrets for production)
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=https://your-domain.com

# Email Configuration (for production)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password

# WordPress Configuration
WORDPRESS_DB_NAME=headless_cms
WORDPRESS_PORT=80
PHPMYADMIN_PORT=8080

# Qdrant Configuration
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=your_secure_prod_qdrant_api_key