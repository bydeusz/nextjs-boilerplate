# Production Environment Variables Template
# Copy this file to .env.prod and fill in your production values
# NEVER commit .env.prod to version control!

# Database Configuration
POSTGRES_USER=your_prod_db_user
POSTGRES_PASSWORD=your_secure_prod_password
POSTGRES_DB=your_prod_db_name
POSTGRES_HOST=your_prod_db_host
POSTGRES_PORT=5432

# MinIO Configuration
MINIO_ROOT_USER=your_prod_minio_user
MINIO_ROOT_PASSWORD=your_secure_prod_minio_password
MINIO_ENDPOINT=your_prod_minio_host
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_USE_SSL=true

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Security (generate strong secrets for production)
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=https://your-domain.com

# Email Configuration (for production)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
